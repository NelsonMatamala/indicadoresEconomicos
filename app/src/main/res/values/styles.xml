<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ValorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">29sp</item>
        <item name="fontFamily">@font/kameron_normal</item>
    </style>

    <style name="TipoMonedaText" parent="TextAppearance.AppCompat">
        <item name="android:padding">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/round_corner</item>
    </style>

    <style name="IndicadorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="FechaText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/kameron_normal</item>
    </style>

    <style name="CardViewMain" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="ItemCardView" parent="TextAppearance.AppCompat">
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="tittleIndicador" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTittleIndicador</item>
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="lnCardview" parent="TextAppearance.AppCompat">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/gradient_cardview</item>
    </style>


</resources>